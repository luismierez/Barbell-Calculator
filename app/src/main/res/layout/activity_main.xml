<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="luismierez.barbellcalculator.MainActivity">

    <EditText
        android:id="@+id/totalWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/add45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+45"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/totalWeight" />

    <Button
        android:id="@+id/add35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+35"
        app:layout_constraintStart_toEndOf="@+id/add45"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/add45"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/add25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+25"
        app:layout_constraintStart_toStartOf="@+id/add45"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add45" />

    <Button
        android:id="@+id/add10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10"
        app:layout_constraintStart_toEndOf="@+id/add25"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add35" />

    <Button
        android:id="@+id/add5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        app:layout_constraintStart_toStartOf="@+id/add25"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add25" />

    <Button
        android:id="@+id/addHalf5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2.5"
        app:layout_constraintStart_toEndOf="@+id/add5"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add10" />

    <Button
        android:id="@+id/remove45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-45"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/add5" />

    <Button
        android:id="@+id/remove35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-35"
        app:layout_constraintStart_toEndOf="@+id/remove45"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/remove45"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/remove25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-25"
        app:layout_constraintStart_toStartOf="@+id/remove45"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/remove45" />

    <Button
        android:id="@+id/remove10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-10"
        app:layout_constraintStart_toEndOf="@+id/remove25"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/remove35" />

    <Button
        android:id="@+id/remove5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        app:layout_constraintStart_toStartOf="@+id/remove25"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/remove25" />

    <Button
        android:id="@+id/removeHalf5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-2.5"
        app:layout_constraintStart_toEndOf="@+id/remove5"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/remove10" />

    <TextView
        android:id="@+id/numPlates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of plates"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/totalWeight"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/add35"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add10" />

    <TextView
        android:id="@+id/numPlate45Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="45"
        app:layout_constraintStart_toStartOf="@+id/numPlates"
        app:layout_constraintTop_toBottomOf="@+id/numPlates" />

    <TextView
        android:id="@+id/num35Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="35"
        app:layout_constraintEnd_toEndOf="@+id/numPlate45Label"
        app:layout_constraintStart_toStartOf="@+id/numPlate45Label"
        app:layout_constraintTop_toBottomOf="@+id/numPlate45Label" />

    <TextView
        android:id="@+id/num25Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="25"
        app:layout_constraintEnd_toEndOf="@+id/num35Label"
        app:layout_constraintStart_toStartOf="@+id/num35Label"
        app:layout_constraintTop_toBottomOf="@+id/num35Label" />

    <TextView
        android:id="@+id/num10Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="10"
        app:layout_constraintEnd_toEndOf="@+id/num25Label"
        app:layout_constraintStart_toStartOf="@+id/num25Label"
        app:layout_constraintTop_toBottomOf="@+id/num25Label" />

    <TextView
        android:id="@+id/num5LAbel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="5"
        app:layout_constraintEnd_toEndOf="@+id/num10Label"
        app:layout_constraintStart_toStartOf="@+id/num10Label"
        app:layout_constraintTop_toBottomOf="@+id/num10Label" />

    <TextView
        android:id="@+id/numHalf5Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="2.5"
        app:layout_constraintEnd_toEndOf="@+id/num5LAbel"
        app:layout_constraintStart_toStartOf="@+id/num5LAbel"
        app:layout_constraintTop_toBottomOf="@+id/num5LAbel" />

    <TextView
        android:id="@+id/num45Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/numPlate45Label"
        app:layout_constraintStart_toEndOf="@+id/numPlate45Label"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/num35Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/num35Label"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/num35Label" />

    <TextView
        android:id="@+id/num25Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/num25Label"
        app:layout_constraintStart_toEndOf="@+id/num25Label"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/num10Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/num10Label"
        app:layout_constraintStart_toEndOf="@+id/num10Label"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/num5Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/num5LAbel"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/num5LAbel" />

    <TextView
        android:id="@+id/numHalf5Plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="40dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/numHalf5Label"
        app:layout_constraintStart_toEndOf="@+id/numHalf5Label"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>
